{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "allowJs": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noEmit": false,
    "outDir": "."
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["server.ts"],
  "exclude": ["lib/**/*.js"]
}